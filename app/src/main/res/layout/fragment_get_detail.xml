<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A1068"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.fragment.detail.GetDetailFragment">

        <ImageView
            android:id="@+id/iv_main_poster"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/view_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_main_rating"
            android:text="Rating"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_rating_star"
            android:text="Рейтинг"
            android:textColor="#FBFB0F"
            android:textSize="25sp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_baseline_stars_24"
            app:layout_constraintLeft_toRightOf="@+id/tv_main_rating"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_main_genres"
            android:text="Жанр ="
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_genres_of_film"
            android:text="Comedy"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_main_genres"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating_star"
            app:layout_constraintTop_toTopOf="@+id/tv_main_genres"
            app:layout_goneMarginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_main_status"
            android:text="Статус = "
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_status_of_film"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_main_status"
            app:layout_constraintTop_toTopOf="@+id/tv_main_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_main_premier"
            android:text="Премьера  =  "
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintLeft_toRightOf="@id/tv_main_rating"
            android:layout_marginLeft="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="383dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_premier_of_film"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_main_premier"
            app:layout_constraintTop_toTopOf="@+id/tv_main_premier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_main_language"
            android:text="Язык  = "
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_status" />

        <TextView
            android:id="@+id/tv_language_of_film"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_main_language"
            app:layout_constraintTop_toTopOf="@+id/tv_main_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_main_ended"
            android:text="Закончился  ="
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_ended_of_film"
            app:layout_constraintTop_toTopOf="@+id/tv_main_ended"
            app:layout_constraintLeft_toRightOf="@+id/tv_main_ended"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title_description"
            android:text="Описание"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="italic"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_ended"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_description_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="left"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/costum_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_description"
            tools:ignore="RtlHardcoded" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>